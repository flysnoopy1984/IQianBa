
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_O2OLayout.cshtml";
}

<link href="~/Content/Component/jquery-confirm.min.css" rel="stylesheet" />
<script src="~/scripts/Component/jquery-confirm.js"></script>
<script src="~/scripts/Component/jquery.cookie.js"></script>

<link href="@Url.Scrpit("~/Content/Wap/O2O/index.css")" rel="stylesheet" />
<script src="@Url.Scrpit("~/scripts/Wap/O2O/index.js")"></script>
<style>
    .container {
        padding-left: 0px !important;
        padding-right: 0px !important;
    }
   #btnLogin{
       float:right;
       margin-right:15px;
   }

</style>
<header class="o2o_header">
    <div>O2O商城</div>
    <div class="div_SwitchUser"><a href="javascript:switchUser();">切换用户</a></div>
</header>

<div class="o2o_content">
    <div class="box">
        <div id="ActionArea">
            <div class="o2o_index_btn" id="o2o_btn__order" onclick="orderPdt();">我要购物</div>
            <div class="o2o_index_btn currentOrder" id="o2o_btn__look" onclick="lookOrderDetail();">最近一次订单</div>
            <div class="o2o_index_btn" id="o2o_btn__look" onclick="lookOrderList();">订单列表</div>
        </div>
        <div id="get_phone_check" class="get_phone_check">
            <input id="phone_num" type="tel" placeholder="请输入手机号" class="form-control get_phone_check_input" />
            <div id="phone_clear" class="input_clear" onclick="clearPhone();"></div>
            <button id="btnLogin" type="button" class="btn btn-success" onclick="LoginByPhone();">提交</button>
        </div>
    </div>
</div>
