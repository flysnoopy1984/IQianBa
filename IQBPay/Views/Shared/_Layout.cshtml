    <!--Right Container-->
    <div class="RightArea">
        <!-- Top Bar Begin -->
        <div id="ulRightTopBar">
            <ul  class="UlHorizontal">
                <li>
                    <img class="img-profile" src="@Session["UserHeaderImg"]" />
                    <span>Hi User 你好！</span>
                </li>
                <li>
                    <a>
                        <span class="icon-gear"></span>&nbsp;&nbsp;Setting
                    </a>
                </li>
            </ul>
        </div>
        <!-- Top Bar End -->
        <!-- NavBarContainer Begin -->
        <div id="NavBarContainer">
            <ul id="NavBar" class="UlHorizontal">
                <li>
                    <span class="entypo-home"></span>
                </li>
                <li>
                    <i class="fa fa-lg fa-angle-right"></i>
                </li>
                <li>
                    <a href="#" title="Sample page 1">@RenderSection("SubMenu1")</a>
                </li>
                <li>
                    <i class="fa fa-lg fa-angle-right"></i>
                </li>
                <li>
                    <a href="#" title="Sample page 1">@RenderSection("SubMenu2")</a>
                </li>
                @*<li class="pull-right">
                    <div class="input-group input-widget">
                        <input style="border-radius:15px" type="text" placeholder="Search..." class="form-control">
                    </div>
                </li>*@
            </ul>
        </div>
        <!--NavBarContainer End -->
        <div class="ContentArea">
            @RenderBody()
        </div>
    </div>


</body>
</html>