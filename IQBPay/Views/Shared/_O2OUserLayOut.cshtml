
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    @*<meta name="viewport" content="width=device-width,height=device-height, initial-scale=1">*@
    <meta content="initial-scale=1.0, minimum-scale=1.0, maximum-scale=2.0, user-scalable=no, width=device-width" name="viewport">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/scripts/jquery-1.10.2.min.js"></script>

    <script src="@Url.Scrpit("~/scripts/Web/Common.js")"></script>
    <script src="~/scripts/Component/jquery.transit.min.js"></script>
    <link href="@Url.Scrpit("~/Content/Component/IQBLeftmenu.css")" rel="stylesheet" />

    <script src="@Url.Scrpit("~/scripts/Component/IQB/IQBLeftmenu.js")"></script>
    <title>O2O商城</title>

    <style type="text/css">
        .o2o_header {
            height: 50px;
            width: 100%;
            top: 0px;
            text-align: center;
            line-height: 50px;
            border-bottom: 1px solid #f1f1f1;
            font-size: 21px;
        }

        .o2o_content {
            width: 100%;
            height: 100%;
            padding: 0 0;
        }
    </style>
    <script type="text/javascript">
    function GoMenu(url)
    {
        var aoId = GetUrlParam("aoId");
        if (url.indexOf("?") > -1)
            window.location.href = url + "&aoId=" + aoId;
        else
            window.location.href = url + "?aoId=" + aoId;
    }
    </script>
</head>
<body>
    <ul id="LeftMainMenu" class="sidenav">
        <li class=""><a href=javascript:GoMenu('/O2OWap/Index')><i class="fa fa-inbox"></i><b>主页</b></a></li>
        <li><a href=javascript:GoMenu('/O2OWap/OrderList')><i class="fa fa-inbox"></i><b>我的请求</b></a></li>
        <li><a href="javascript:GoMenu('/O2OWap/ContactUS')"><i class="fa fa-check"></i><b>寻求帮助</b></a></li>
    </ul>
    <header class="o2o_header">
        <div class="LeftMenu" id="btnLeftMainMenu"><a href="#">菜单</a></div>
        <div>@RenderSection("Title")</div>
        <div class="div_UserInfo"><a href="#">@ViewBag.BuyerPhone</a></div>
    </header>
    <div class="o2o_content">

        @RenderBody()
    </div>
</body>
</html>
