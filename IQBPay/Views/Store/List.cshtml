
@{
    ViewBag.Title = "StoreInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section SubMenu1{
    商户
}
@section SubMenu2{
    我的商户列表
}



<link href="@Url.Scrpit("~/Content/Style/Web/List.css")" rel="stylesheet" />
<script src="@Url.Scrpit("~/scripts/Web/Common.js")"></script>
<script src="@Url.Scrpit("~/scripts/Component/IQBTable.js")"></script>
<script src="@Url.Scrpit("~/scripts/Web/StoreList.js")"></script>
<div id="ListArea">
    <div id="Title" style="margin:0px;">
        <span id="ListTitleName"></span>
        <div class="ListCondition">
            <ul class="UlHorizontal">
                <li>
                    <div class="form-group">
                        <label>商户名：</label>
                        <input id="cStoreName" type="text" class="form-control ConditionField">
                    </div>
                </li>

                <li>
                    <div class="form-group">
                        <label>状态：</label>
                        <select id="cRecordStatus" class="form-control ConditionField">
                            <option value="1">禁用</option>
                            <option value="99">全部</option>
                            <option value="0" selected>正常</option>
                        </select>

                    </div>
                </li>
                <li>
                    <div class="form-group">
                        <label>大/小：</label>
                        <select id="cStoreType" class="form-control ConditionField">
                            <option value="4">大额</option>
                            <option value="99">全部</option>
                            <option value="0" selected>小额</option>
                        </select>

                    </div>
                </li>
              

        </div>

        <ul class="UlHorizontal" style="float:right">
            <li>
                <button type="button" class="btn btn-warning" onclick="ToInfo(1,1);">添加商户</button>
            </li>
            <li>
                
            </li>
            <li>
                <button type="button" class="btn btn-success" onclick="CheckStoreAuth();">检测商户</button>
                <button type="button" class="btn btn-primary" onclick="Query();">查询</button>
            </li>
           
        </ul>
    </div>
    <div id="ListContent">
        <table id="tbData" class="table table-hover table-bordered TableOverflowHidden">
            <thead class="cf">
                <tr id="trHeader">
                    <th width="200px">商户名</th>
                    <th width="60px">渠道</th>
                    <th width="50px">点率</th>
                    <th width="">是收款账户</th>
                    <th width="">每日额度</th>
                    <th width="">剩余额度</th>
                    <th width="">风控额度</th>
                    <th width="">非风控额度</th>
                    <th width="">商户类型</th>
                    <th width="">AliPay UserId</th>
                    <th width="">APPName</th>                
                    <th>备注</th>
                    <th width="">状态</th> 
                    <th width=""> 操作</th>
                </tr>
            </thead>
            <tbody id="trContainer">
              
            </tbody>
        </table>
    </div>
</div>



