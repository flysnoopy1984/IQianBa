
@{
    ViewBag.Title = "APP详情";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section SubMenu1{
    <a href="/Main/AppList" title="APP">APP</a>
}
@section SubMenu2{
    <a href="#" title="APP详情">APP详情</a>
}
<link href="@Url.Scrpit("~/Content/Style/Web/Info.css")" rel="stylesheet" />
<script src="@Url.Scrpit("~/scripts/Web/Common.js")"></script>
<script src="@Url.Scrpit("~/scripts/Web/App.js")"></script>
<link href="@Url.Scrpit("~/Content/Component/bootstrap-switch/bootstrap-switch.min.css")" rel="stylesheet" />
<script src="@Url.Scrpit("~/Content/Component/bootstrap-switch/bootstrap-switch.min.js")"></script>
<script type="text/javascript">
    $(document).ready(function () {
        //Init Default Value
        var Id = GetUrlParam("id");
   
        Init(Id);
    });

</script>

<div id="InfoArea">
    <div id="Title" class="alert alert-info BarTitle">
        <span class="entypo-info-circled"></span>
        <strong>查看或编辑信息</strong>


    </div>
    <div id="EditArea" style="width:1100px !important;">
        <input type="hidden" id="storeId" />
        <div class="form-group">
            <label class="col-sm-3 control-label">AppId</label>
            <div class="col-sm-6">
                <input id="AppId" type="text" class="form-control NeedFill">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">AppName</label>
            <div class="col-sm-6">
                <input id="AppName" type="text" class="form-control">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">是否当前应用</label>
            <div class="col-sm-6">
                <input id="IsCurrent"  style="width:30px;" type="checkbox" class="form-control">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">商户授权Url</label>
            <div class="col-sm-6">
                <input id="AuthUrl_Store" type="text" class="form-control">
            </div>
        </div>
        

        <div class="form-group">
            <label class="col-sm-3 control-label">私钥</label>
            <div class="col-sm-6">
                <textarea id="Private_Key" style="height:300px; width:700px;" class="form-Area">

                </textarea>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">公钥</label>
            <div class="col-sm-6">
                <textarea id="Public_Key" style="height:300px; width:700px;" class="form-Area"></textarea>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">网关</label>
            <div class="col-sm-6">
                <input id="ServerUrl" type="text" class="form-control">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">Version</label>
            <div class="col-sm-6">
                <input id="Version" type="text" class="form-control">
            </div>
        </div>

       
        <div class="form-group">
            <label class="col-sm-3 control-label">SignType</label>
            <div class="col-sm-6">
                <input id="SignType" type="text" class="form-control">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">Charset</label>
            <div class="col-sm-6">
                <input id="Charset" type="text" class="form-control">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">状态</label>
            <div class="switch col-sm-6" data-on="success" data-off="warning">
                <input type="checkbox" id="AppStatus">
            </div>
        </div>
    </div>

    <div class="ButtonList">
        <button type="button" class="btn btn-warning">新增</button>
        <button type="button" class="btn btn-success" onclick="Save();">保存</button>
    </div>
    <input type="hidden" id="RecId" />
</div>
