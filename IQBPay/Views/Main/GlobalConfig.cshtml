
@{
    ViewBag.Title = "全局配置";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section SubMenu1{
    系统
}
@section SubMenu2{
    全局配置
}
<link href="~/Content/Style/Web/Info.css" rel="stylesheet" />
<script src="~/scripts/Web/SysConfig.js"></script>
<div id="InfoArea">
    <div id="Title" class="alert alert-info BarTitle">
        <span class="entypo-info-circled"></span>
        <strong>查看或编辑信息</strong>
    </div>
    <div id="EditArea">
        <input type="hidden" id="storeId" />
        <div class="form-group">
            <label class="col-sm-3 control-label">统一平台扣点率</label>
            <div class="col-sm-6">
                <input id="PPRate" type="text" class="form-control">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">统一收款地址</label>
            <div class="col-sm-6">
                <input id="ARUrl" type="text" class="form-control">
            </div>
        </div>
    </div>

    <div class="ButtonList">
        <button type="button" class="btn btn-warning">新增</button>
        <button type="button" class="btn btn-success" onclick="Save();">保存</button>
    </div>
    <input type="hidden" id="RecId" />
</div>


