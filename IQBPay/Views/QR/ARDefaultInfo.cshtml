
@{
    ViewBag.Title = "平台默认收款二维码";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section SubMenu1{
    二维码
}
@section SubMenu2{
    默认收款二维码
}
<link href="~/Content/Style/Web/Info.css" rel="stylesheet" />
<script src="~/scripts/Web/Common.js"></script>
<script src="~/scripts/Web/QR_ARDefaultInfo.js"></script>
<div id="InfoArea">
    <div id="Title" class="alert alert-info BarTitle">
        <span class="entypo-info-circled"></span>
        <strong>查看编辑（平台默认授权码）</strong>
    </div>
    <div id="EditLeftArea">
        <div class="form-group">
            <label class="col-sm-3 control-label">名称</label>
            <div class="col-sm-6">
                <input id="Name" type="text" class="form-control NeedFill">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">点率(0-100)</label>
            <div class="col-sm-6">
                <input id="Rate" type="text" class="form-control NeedFill" onkeyup='this.value = this.value.replace(/[^\d.]/g, "")'>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">收款商户</label>
            <div class="col-sm-6">
                <select class="form-control" id="ReceiveStore">
                    
                </select> 
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">备注</label>
            <div class="col-sm-6">
                <input id="Remark" type="text" class="form-control">
                @*<input type="checkbox" />
                    添加到二维码底部*@
            </div>
        </div>
    </div>
    <input type="hidden" id="RecId" />
    <div id="EditRightArea">
        <img style="width:180px;height:180px;" id="QRImg" src="" />
    </div>

    <div class="ButtonList">
        <button type="button" class="btn btn-success" onclick="Save();">保存</button>
    </div>
</div>
