
@{
    ViewBag.Title = "商户授权码详情";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section SubMenu1{
    二维码
}
@section SubMenu2{
    商户授权码详情
}
<link href="@Url.Scrpit("~/Content/Style/Web/Info.css")" rel="stylesheet" />
<script src="@Url.Scrpit("~/scripts/Web/Common.js")"></script>

<script src= "@Url.Scrpit("~/scripts/Web/QR_AuthInfo.js")"></script>
<link href= "@Url.Scrpit("~/Content/Component/bootstrap-switch/bootstrap-switch.min.css")" rel="stylesheet" />
<script src= "@Url.Scrpit("~/Content/Component/bootstrap-switch/bootstrap-switch.min.js")"></script>


<div id="InfoArea">
    <div id="Title" class="alert alert-warning BarTitle">
        <span class="entypo-info-circled"></span>
        <strong>查看编辑（此二维码用于给第三方商户授权）</strong>
    </div>
    <div id="EditLeftArea">
        <div class="form-group">
            <label class="col-sm-3 control-label">APP</label>
            <div class="col-sm-6">
                <select class="form-control" id="appId">
                    @*<option value="2017122901328258" >寒翼</option>
                    <option value="2017112100077913">玉杰</option>*@
                    <option value="2018060760292909" selected>E哲胜</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">名称</label>
            <div class="col-sm-6">
                <input id="Name" type="text" class="form-control NeedFill">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">点率(0-100)</label>
            <div class="col-sm-6">
                <input id="Rate" type="text" class="form-control NeedFill" onkeyup='this.value = this.value.replace(/[^\d.]/g, "")'>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">日营业额</label>
            <div class="col-sm-6">
                <input id="DayIncome" type="text" class="form-control" value="">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">剩余额度</label>
            <div class="col-sm-6">
                <input id="RemainAmount" type="text" class="form-control">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">最小额度</label>
            <div class="col-sm-6">
                <input id="MinLimitAmount" type="text" class="form-control">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">最大额度</label>
            <div class="col-sm-6">
                <input id="MaxLimitAmount" type="text" class="form-control">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">码类型</label>
            <div class="col-sm-6">
                <select class="form-control" id="StoreType">
                    <option value="1">小额</option>
                    <option value="2">信用卡</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">渠道</label>
            <div class="col-sm-6">
                <select class="form-control" id="Channel">
                    <option value="0">平台</option>
                    <option value="1">加盟商</option>
                </select> 
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">备注</label>
            <div class="col-sm-6">
                <input id="Remark" type="text" class="form-control">
                @*<input type="checkbox" />
                    添加到二维码底部*@
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">状态</label>
            <div class="switch col-sm-6" data-on="success" data-off="warning">
                <input type="checkbox" id="QRStatus">
            </div>
        </div>

    </div>
    <input type="hidden" id="RecId" />
    <div id="EditRightArea">
        <img style="width:180px;height:180px;" id="QRImg" src="" />
    </div>

    <div class="ButtonList">
        <button type="button" class="btn btn-warning" onclick="New()">新增</button>
        <button type="button" class="btn btn-success" onclick="Save();">保存</button>
    </div>
    <input type="hidden" id="OpenId" />
</div>
