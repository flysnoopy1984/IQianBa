
@{
    ViewBag.Title = "User Profile";
}
@section SubMenu1{
    用户管理
}
@section SubMenu2{
    用户信息
}
<link href="~/Content/Style/Web/User.css" rel="stylesheet" />
<script src="~/scripts/Web/UserProfile.js"></script>

<div id="ProfileAreaContainer">
    <ul id="LeftUL">
        <li>
        <span style="float:left !important;" class="entypo-user">
            </span>&nbsp;&nbsp;用户</li>
        <li style="text-align:center;">
        <img id="HeaderImg" class="img-profile-big" src="" /></li>
        <li>角色类型：
            <span id="UserRole"></span>
        </li>
        <li>注册日期
            <span id="RegisterDate"></span>
        </li>
        <li>最后登录日期
            <span id="LastLoginDate"></span>
        </li>
    </ul>

    <div id="Right">
        <h2 id="UserName">
           用户名
           
        </h2>
        <hr />
        <dl id="dtUserDetail" class="dl-horizontal-profile">
            <dt>用户Id</dt>
            <dd id="UserId"></dd>

            <dt>手机</dt>
            <dd id="UserPhone"></dd>
            @*<dt>默认收款二维码</dt>
            <dd>
                <img id="QRImg" sstyle="width:150px;height:150px;" src="" />
