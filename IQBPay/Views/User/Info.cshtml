
@{
    ViewBag.Title = "用户详情";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section SubMenu1{
    <a href="/User/List" title="用户管理">用户管理</a>
}
@section SubMenu2{
    用户详情
}


<link href="@Url.Scrpit("~/Content/Style/Web/Info.css")" rel="stylesheet" />
<script src="@Url.Scrpit("~/scripts/Web/Common.js")"></script>
<script src="@Url.Scrpit("~/scripts/Web/UserInfo.js")"></script>
<link href="@Url.Scrpit("~/Content/Component/bootstrap-switch/bootstrap-switch.min.css")" rel="stylesheet" />
<script src="@Url.Scrpit("~/Content/Component/bootstrap-switch/bootstrap-switch.min.js")"></script>


<div id="InfoArea">
    <input type="hidden" id="storeId" />
    <input type="hidden" id="RecId" />
    <input type="hidden" id="QrUserId" />
    <div id="Title" class="alert alert-info BarTitle">
        <span class="entypo-info-circled"></span>
        <strong>查看或编辑信息</strong>

    </div>
   
    
    <div id="EditArea">
        <div class="form-group">
            <label class="col-sm-3 control-label">用户名</label>
            <div class="col-sm-6">
                <input id="Name" type="text" class="form-control NeedFill" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">扣点率</label>
            <div class="col-sm-6">
                <input id="Rate" type="text" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">提现账户(重要)</label>
            <div class="col-sm-6">
                <input id="AliPayAccount" type="text" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">是否自动打款</label>
            <div class="col-sm-6">
                <input id="IsAutoTransfer" style="width:30px;" type="checkbox" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">上级代理</label>
            <div class="col-sm-6">
                <select id="selParentAgent" class="form-control"></select>
                @*<input id="ParentAgentId" type="hidden" />
                    <input id="ParentAgent" type="text" class="form-control" />*@
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">上级代理返点率</label>
            <div class="col-sm-6">
                <input id="ParentCommissionRate" type="text" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">收款商户</label>
            <div class="col-sm-6">
                <select id="selStore" class="form-control"></select>
                @*<input id="StoreId" type="hidden">
                    <input id="StoreName" type="text" class="form-control" />*@
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">收款商户点率</label>
            <div class="col-sm-6">
                <input id="StoreRate" type="text" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">市场扣点率</label>
            <div class="col-sm-6">
                <input id="MarketRate" type="text" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">用户角色</label>
            <div class="col-sm-6">
                <select id="selUserRole" class="form-control">
                    <option value="1">过客</option>
                    <option value="2">代理</option>
                    <option value="99">商户</option>
                    <option value="100">超级管理员</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">用户状态</label>
            <div class="switch col-sm-6" data-on="success" data-off="warning" />
            <input type="checkbox" id="UserStatus" />
        </div>

    </div>
    
    <div class="ButtonList">
        <button type="button" class="btn btn-success" onclick="Save();">保存</button>
    </div>
    <div>
        <img id="QRShow" src="" />
    </div>
   
</div>
