<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,height=device-height, initial-scale=1">
    @*<meta content="initial-scale=1.0, minimum-scale=1.0, maximum-scale=2.0, user-scalable=no, width=device-width" name="viewport">*@
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/Style/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Content/Scripts/jquery-1.10.2.min.js"></script>
    <script src="@Url.Scrpit("~/Content/Scripts/Common.js")"></script>
    <link href="@Url.Scrpit("~/Content/Style/MainCss.css")" rel="stylesheet" />
    <link href="@Url.Scrpit("~/Content/Style/IQBLeftmenu.css")" rel="stylesheet" />
    <style type="text/css">
        .o2o_header {
            height: 50px;
            width: 100%;
            top: 0px;
            text-align: center;
            line-height: 50px;
            border-bottom: 1px solid #f1f1f1;
            font-size: 21px;
        }

        .o2o_content {
        padding-left:20px;
        padding-right:20px;
        height:100vh;
        display:flex;
        }
        .HeaderMenu_Right {
            font-size: 9px;
            position: absolute;
            right: 10px;
            z-index: 999;
            top: 0px;
        }
    </style>
</head>

<body>
    <header class="o2o_header">
        <div class="LeftMenu" id="btnLeftMainMenu"><a href="#">菜单</a></div>
        <div>@RenderSection("Title")</div>
        <div class="HeaderMenu_Right"><a href="#" id="CurUser">@ViewBag.BuyerPhone</a></div>
    </header>
    <div class="o2o_content">

        @RenderBody()
    </div>
</body>
</html>
