
@{
    ViewBag.Title = "支付通道";
    Layout = "~/Views/Shared/_O2OLayout.cshtml";
}
<style type="text/css">
.o2o_warn {
  background-color: #ffe1d5;
  font-size: 12px;
  color: #333333;
  width: 100%;
  height: 50px;
  line-height: 50px;
  padding-left: 10px;
}
 #ChannelList li
 {
     line-height:60px;
     margin-top:15px;
     margin-bottom:15px;
     text-align:center;
     font-size:20px;
     border:none !important;
 } 
 .gap_border {
  
  width: 100%;
  background-image: url('/Content/images/border.png');
  background-repeat:no-repeat;
  background-position-y:top;
  height:8px;
}
 .boxInfo
 {
     margin-top:50px;
 }

.sr-only
{
    color:black;
    clip:unset;
    width:100%;
    height:40px;
    line-height:40px;
    left:0px;
}

.progress
{
    height:40px;
    line-height:40px;
}
</style>

<link href="~/Content/Css/Component/jquery-confirm.css" rel="stylesheet" />
<script src="~/Content/Script/Component/jquery-confirm.js"></script>

<script src="~/Content/Script/Component/jquery.blockUI.min.js"></script>
<script src="@Url.Scrpit("~/Content/Script/IQBPay/PaySelection.js")"></script>

<div class="o2o_warn">请选择需要的通道</div>
<div class="gap_border"></div>
<div class="boxInfo">
    <ul class="list-group" id="ChannelList">
        <li id="liJY" class="list-group-item item" style="background-color:#FFECB8">
          信用卡           
        </li>
        @if (ViewBag.HasHuaBei)
        {
            <li id="liSJ" class="list-group-item item" style="background-color:#6c8ffb">花呗</li>
        }
        
    </ul>
</div>
