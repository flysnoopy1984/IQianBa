
@{
    ViewBag.Title = "StoreAdd";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<script src="~/Content/Script/Component/Validform_v5.3.2_min.js"></script>
<script src="@Url.Scrpit("~/Content/Script/jsCommon.js")"></script>
<script src="@Url.Scrpit("~/Content/Script/IQBPay/StoreAdd.js")"></script>
<link href="~/Content/Css/Component/jquery-confirm.css" rel="stylesheet" />
<script src="~/Content/Script/Component/jquery-confirm.js"></script>
<link href="@Url.Scrpit("~/Content/Css/Info.css")" rel="stylesheet" />

<div id="PageInfo" class="PageInfo">
    <div class="grzxcon2 mgz xi30 bai">商户入驻</div>
    <div class="InfoBody">
        <div class="form-group">
            <label class="label-top">店铺名称</label>
            <div class="col-sm-6">
                <input id="Name" type="text" class="form-control" datatype="s" nullmsg="请填写店铺名称" sucmsg="OK">
            </div>
            <div class="Validform_checktip"></div>
        </div>
        <div class="form-group">
            <label class="label-top">返佣点数-（只能填入0.5-1的数字）</label>
            <div class="col-sm-6">
                <input id="Rate" type="text" class="form-control" datatype="/^(0\.[5-9]\d*|1)$/" nullmsg="请填写返佣点数" sucmsg="OK" errormsg="请填写0.5-1之间的数字">
            </div>
            <div class="Validform_checktip"></div>
        </div>

        <div class="form-group">
            <label class="label-top">分控最大额度(如299,499...)</label>
            <div class="col-sm-6">
                <input id="MaxLimitAmount" type="text" datatype="n" class="form-control" nullmsg="请填写分控额度" sucmsg="OK">
            </div>
            <div class="Validform_checktip"></div>
        </div>

        <div class="form-group">
            <label class="label-top">每日限额(不填代表无限额)</label>
            <div class="col-sm-6">
                <input id="DayIncome" type="text" class="form-control" datatype="empty|n" sucmsg="OK">
            </div>
            <div class="Validform_checktip"></div>
        </div>

        <div id="buttonArea" style="margin-bottom:50px;">
            <button type="button" class="mgz btn btn-primary AlwaysBottom20" id="btnJoinPT" style="width:95%; height:60px;" onclick="JoinPT();">入驻平台</button>
           
        </div>
    </div>
    <input type="hidden" value="@ViewBag.OpenId" id="hOpenId" />
</div>

