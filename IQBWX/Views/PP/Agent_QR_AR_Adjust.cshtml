
@{
    ViewBag.Title = "调整用户手续费";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<script src="~/Content/Script/Component/Validform_v5.3.2_min.js"></script>
<script src="@Url.Scrpit("~/Content/Script/jsCommon.js")"></script>
<script src="@Url.Scrpit("~/Content/Script/IQBPay/Agent_QR_AR_Adjust.js")"></script>

<link href="~/Content/Css/Component/jquery-confirm.css" rel="stylesheet" />
<script src="~/Content/Script/Component/jquery-confirm.js"></script>
<link href="@Url.Scrpit("~/Content/Css/Info.css")" rel="stylesheet" />

<div id="PageInfo" class="PageInfo">
    <div class="grzxcon2 mgz xi30 bai">调整用户手续费</div>
    <div class="InfoBody">
        <div class="form-group">
            <label class="label-top">当前用户手续费</label>
            <div class="col-sm-6">
                <input id="Name" type="text" class="form-control" datatype="s" nullmsg="当前用户手续费" sucmsg="OK">
            </div>
            <div class="Validform_checktip"></div>
        </div>
        <div class="form-group">
            <label class="label-top">用户手续费调整为（只允许8-12之间）</label>
            <div class="col-sm-6">
                <input id="Rate" type="text" class="form-control" datatype="n" ajaxurl="/Valid/CheckNum8_12" nullmsg="请填写调整手续费" sucmsg="OK" errormsg="请填写8-12之间的数字">
            </div>
            <div class="Validform_checktip"></div>
        </div>

        <div class="form-group">
            <label class="label-top">设为当前收款二维码</label>
            <div class="col-sm-6">
                <input type="checkbox" />
            </div>         
        </div>

        <div id="buttonArea" style="margin-bottom:50px;">
            <button type="button" class="mgz btn btn-primary AlwaysBottom20" id="btnAdjustAgentQR" style="width:95%; height:60px;" onclick="AdjustAgentQR();">调整</button>
        </div>
    </div>
    <input type="hidden" value="@ViewBag.OpenId" id="hOpenId" />
</div>

