
@{
    ViewBag.Title = "商户列表";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<script src="~/Content/Script/Component/Validform_v5.3.2_min.js"></script>

<script src="@Url.Scrpit("~/Content/Script/IQBPay/StoreList.js")"></script>


<link href="@Url.Scrpit("~/Content/Css/Info.css")" rel="stylesheet" />


<div id="PageList">
    <div class="grzxcon2 mgz xi30 bai cen"><a href="javascript:ToInfoPage();">商户列表</a></div>
    <div class="ListTableBody_noFixed" id="ListTableBody">
        <div id="Process" class="DataProcess" style="display:none;">数据加载中...</div>
        <table class="table mgz2  large-only" id="trContainer"></table>
    </div>
    <button type="button" class="mgz btn btn-primary AlwaysBottom20" id="btnNext" style="width:90%" onclick="Next();">加载更多</button>
</div>

<div id="PageInfo" class="PageInfo">
    <div class="grzxcon2 mgz xi30 bai"><a href="javascript:ToListPage();"><<返回列表</a></div>
    <div class="InfoBody">
        <div class="form-group">
            <label class="label-top">店铺名称</label>
            <div class="col-sm-6">
                <input id="Name" type="text" class="form-control" datatype="s" nullmsg="请填写店铺名称" sucmsg="OK">   
            </div>
          <div class="Validform_checktip"></div>
        </div>
        <div class="form-group">
            <label class="label-top">返佣点数-（只能填入0.5-1的数字）</label>
            <div class="col-sm-6">
                <input id="Rate" type="text" class="form-control" datatype="/^(0\.[5-9]\d*|1)$/" nullmsg="请填写返佣点数" sucmsg="OK" errormsg="请填写0.5-1之间的数字">
            </div>
            <div class="Validform_checktip"></div>
        </div>

        <div class="form-group">
            <label class="label-top">分控最大额度(如299,499...)</label>
            <div class="col-sm-6">
                <input id="MaxLimitAmount" type="text" datatype="n" class="form-control" nullmsg="请填写分控额度" sucmsg="OK">
            </div>
            <div class="Validform_checktip"></div>
        </div>

        <div class="form-group">
            <label class="label-top">每日限额(不填代表无限额)</label>
            <div class="col-sm-6">
                <input id="DayIncome" type="text" class="form-control" datatype ="empty|n"  sucmsg="OK">
            </div>
            <div class="Validform_checktip"></div>
        </div>

        <div class="form-group">
            <label class="label-top">没有授权</label>
        </div>

    </div>
   
</div>
