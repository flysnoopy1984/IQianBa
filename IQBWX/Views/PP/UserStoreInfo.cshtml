@model IQBCore.IQBPay.Models.User.EUserStore
@{
    ViewBag.Title = "商户信息";
    Layout = "~/Views/Shared/_O2OLayout.cshtml";
}
<style type="text/css">
    .HeaderBK{
        height: 163px;
        background: #6691f6;
        display:flex;
        align-items:center;
    }
    .ImgContainer{
        width:40%;
        text-align:center;
      
    }
    .ImgContainer img{
        border-radius: 50%;
    }
    .HeaderInfo{
        color:white;
        font-family:"微软雅黑","Helvetica Neue", Helvetica, Arial, sans-serif;
        font-size: 14px;
        height: 100px;
        display: flex;
        flex-direction: column;
        justify-content: space-around;  
        width:60%;
        padding-right:8px;
    }
    .StoreName{}
    .AgentName{
        overflow: hidden;
        text-overflow:ellipsis;
        white-space: nowrap;
    }
    .AgentDes{
        display:flex;
    }
    .PageTitle{
        background: #4a78e6;
        color:white;
        height:35px;
        line-height:35px;
        text-align:center;
        font-size:20px;
    }
    .Content
    {
        padding:20px;
    }
    .ContentRow{
        display:flex;
        width:100%;
        padding-bottom:20px;
       
    }
    .ContentRow .FieldName{
        flex-basis:100px;
    }
   
   
</style>
<div class="HeaderBK">
    <div class="ImgContainer">
        <img align="absmiddle" src="@ViewBag.Headimgurl" width="100" height="100" />
    </div>
    <div class="HeaderInfo">
        <div class="StoreName">@Model.Name</div>
        <div class="AgentDes">
            <img align="absmiddle" src="@ViewBag.UserRoleImg" />
            <span class="AgentName">@ViewBag.ShowName</span>
        </div>
    </div>
</div>
<div class="PageTitle">商户信息</div>
<div class="Content">
    <div class="ContentRow">
        <div class="FieldName">返佣：</div>
        <div>@Model.Rate (%)</div>
    </div>
    <div class="ContentRow">
        <div class="FieldName">码主费率：</div>
        <div>@Model.OwnerRate (%)</div>
    </div>
    <div class="ContentRow">
        <div class="FieldName">下级增长率：</div>
        <div>@Model.FixComm (%)</div>
    </div>
    
</div>

