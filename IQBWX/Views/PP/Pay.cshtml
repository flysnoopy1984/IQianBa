width:100%;
}

#VerifyPhoneArea {
font-size:12px !important;
overflow:hidden;
width:100%;
}

.get_phone_btn {
  display: inline-block !important;
  height: 40px;
  border: 1px solid #000000;
  padding: 5px;
  margin-top: 4px;
  width: 90px;
  text-align: center;
  position: absolute;
  right: 15px;
  font-size: 12px;
  line-height: 28px;
  cursor:pointer;
}

.get_code_btn {
  display: inline-block !important;
  height: 40px;
  border: 1px solid #000000;
  padding: 5px;
  margin-top: 4px;
  width: 80px;
  text-align: center;
  position: absolute;
  right: 15px;
  font-size: 12px;
  line-height: 28px;
  cursor:pointer;
}
.get_phone_check {
  width: 100%;
  height: 50px;
  /*border-bottom: 1px solid #dddddd;*/
  /*margin-top: 25px;*/
  display:flex;
}

.get_phone_check_input {
       width: 55%;
    display: inline-block !important;
    vertical-align: super;
    border: 0px;
    height: 35px;
    border-bottom: solid 1px #808080;
    -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0);
    box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0);
}
.form-control
{
    border-radius:0px !important;
}

#verify_phone_check {
  width: 100%;
  height: 50px;
  /*border-bottom: 1px solid #dddddd;*/
  margin-top: 25px;
  display:flex;
}

input:focus {
  outline: none !important;
  border-color: #cfdc00 !important;
  box-shadow: 0 0 5px rgba(255, 255, 255, 0.4) !important;
  border-radius: 5px !important;
}

</style>
