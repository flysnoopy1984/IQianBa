
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="target-densitydpi=286, width=640, user-scalable=no" />
    <script src="@Url.Scrpit("~/Content/Script/jquery-1.10.2.min.js")"></script>
    <link href="@Url.Scrpit("~/Content/Css/MainCss.css")" rel="stylesheet" />
    <link href="@Url.Scrpit("~/Content/Css/PP.css")" rel="stylesheet" />
    <script src="@Url.Scrpit("~/Content/Script/jsCommon.js")"></script>
    <script src="@Url.Scrpit("~/Content/Script/PPPay.js")"></script>


    <title>支付界面</title>
</head>
<body>
    <style>
        body {
            background: #ffffff;
        }
        .TitleInfo{
        height:180px;
        width:400px;
        text-align:left;
        }
    </style>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnPay").attr("disabled", false);
            $("#PayContent").hide();
        });
    </script>
    <div class="mgz cen" id="PayArea">
        <div class="yuec mg2 xi35">爱钱吧支付界面</div>
        <div id="PayContent">        
            <div class="yuex mg2 xi20" style="color:cornflowerblue">请通过支付宝扫码支付</div>
            <div class="form-group">
                <label class="AmtLabel">输入金额</label>
                <div class="AmtEdit mgz">
                    <input id="TotalAmout" class="EditInput" type="text" onkeyup='this.value = this.value.replace(/[^\d.]/g, "")'>
                </div>
            </div>
            <div id="buttonArea">
                <button type="button" class="mgz btn btn-primary AlwaysBottom20" id="btnPay" style="width:90%" onclick="PayToAli();">支付</button>
            </div>
        </div>

        <div id="VerifyArea">
            <div class="TitleInfo mg2 xi20" style="color:#980C16">最近发现有商户在用户支付后不发货的情况。</br>为了保证您正常收到相应的商品，请先正确验证您的手机号码后再支付，请注意短信内容</div>
            <div >
                <span style="margin-right:20px;">手机号码</span><input id="VerifyCode" class="VerifyInput" type="text">
            </div>
            <div style="margin-top:20px;">
                <span style="margin-right:20px; margin-left:20px;">验证码</span>
                <input id="VerifyCode" class="VerifyInput" type="text" style="width:150px;">
                <button type="button" class="mgz btn btn-success verifyButton" id="BnGetVerifyCode" onclick="">获取验证码</button>
            </div>
        </div>
    </div>
    <input type="hidden" id="qrUserId" value="@ViewBag.QRUserId" />
</body>
</html>
