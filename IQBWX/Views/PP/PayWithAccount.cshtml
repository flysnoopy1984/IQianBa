
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="target-densitydpi=286, width=640, user-scalable=no" />

    <script src="@Url.Scrpit("~/Content/Script/jquery-1.10.2.min.js")"></script>
    <script src="@Url.Scrpit("~/Content/Script/jsCommon.js")"></script>
    <script src="@Url.Scrpit("~/Content/Script/jsCookie.js")"></script>
    <link href="@Url.Scrpit("~/Content/Css/MainCss.css")" rel="stylesheet" />
    <link href="@Url.Scrpit("~/Content/Css/PP.css")" rel="stylesheet" />
    <link href="~/Content/Css/Component/jquery-confirm.css" rel="stylesheet" />
    <script src="~/Content/Script/Component/jquery-confirm.js"></script>
    <script src="@Url.Scrpit("~/Content/Script/IQBPay/PayWithAccount.js")"></script>

    <title>支付界面</title>
</head>
<body>
    <style>
        body {
            background: #ffffff;
        }

        .TitleInfo {
            height: 80px;
            line-height: 80px;
            width: 95%;
            text-align: center;
        }
    </style>

    <div class="mgz cen" id="PayArea">
        <div class="yuec mg2 xi35" style="margin-top:20px;">【找熟人】花呗支付平台</div>
        <div class="TitleInfo mg2 xi30" style="font-weight:bold;">请填写收款支付宝账户</div>
       <div>
            <span class="FieldLabel" style="color:#E22018;font-weight:bold;">*尽量避免和当前支付账号相同*</span>
           <span class="FieldLabel" style="color:#E22018;font-weight:bold;">*尽量避免使用非手机账户*</span>
           <span class="FieldLabel" style="color:#E22018;font-weight:bold;">*收款支付宝账户对应多个号</br>将无法收到钱*</span>
           
            <input id="AliPayAccount" class="AliPayAccount" type="text">
           
            <button type="button" class="mgz btn btn-success verifyButton" id="bnConfirmAliPayAccount" onclick="ConfirmAliPayAccount()">确定</button>
            <button type="button" class="mgz btn btn-danger verifyButton" id="bnModifyAliPayAccount" onclick="ModifyAliPayAccount()">修改</button>
           <div class="mg2 xi30" style="color:#F97600; margin-top:20px;">
               <button type="button" class="mgz btn btn-warning" id="btnPay" style="width:60%; height:60px;" onclick="GoToFastPay();">切换到闪电支付模式</button>
           </div>
       </div>


        <div id="PayContent">
            <div class="yuex mg2 xi20" style="color:cornflowerblue">请用10元测试，避免数额太小，金额为零</div>

            <div class="form-group">
                <label class="FieldLabel">输入金额</label>
                <div class="mgz">
                    <input id="TotalAmout" class="PayEditInput" type="text" onkeyup='this.value = this.value.replace(/[^\d.]/g, "")' />
                </div>
            </div>

        
            <div id="buttonArea">
                <button type="button" class="mgz btn btn-primary AlwaysBottom20" id="btnPay" style="width:90%; height:80px;" onclick="PayToAli();">支付</button>
            </div>
        </div>
    </div>
    @*<input type="hidden" id="ReceiveNo" value="@ViewBag.ReceiveNo" />*@
    <input type="hidden" id="qrUserId" value="@ViewBag.QRUserId" />
</body>
</html>
