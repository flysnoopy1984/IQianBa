@model IQBCore.IQBPay.Models.QR.EQRUser
@{
    ViewBag.Title = "O2O商城";
    Layout = "~/Views/Shared/_O2OLayout.cshtml";
}

<script type="text/javascript" src="@ViewBag.ConfirmJquery"></script>
<link href="@ViewBag.ConfirmCss" rel="stylesheet" />
<link href="@Url.Scrpit("~/Content/Css/O2O/O2OMain.css")" rel="stylesheet" />
<style>
   

    .box {
        width: 100%;
        height: 100px;
     
        text-align: center;
    }
    .QRImg{
         width: 300px;
        height: 300px;
     
       
    }

    .o2o_index_btn {
        width: 80%;
        height: 45px;
        margin: 0 auto;
        line-height: 45px;
        position:relative;
        top:30px;
    }

    #o2o_btn__order {
        background-color: #ff4b59;
        color: #ffffff;
        -moz-box-shadow: 0px 8px 15px rgba(255, 75, 89, 0.2);
        /* 老的 Firefox */
        box-shadow: 0px 8px 15px rgba(255, 75, 89, 0.2);
        cursor: pointer;
    }
     .btnOnPC{
     margin-top:20px;
     width:80%;  
    }
     .ShowUrl
     {
        text-align:center;
        font-size:22px;
        font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        color:rgb(0, 148, 255);

     }
</style>
<script type="text/javascript">
    function toRateList()
    {
        window.location.href = "/O2OWap/AgentFeeRate";
    }
    function OpenOnPc() {
        var show = '<div class="ShowUrl"></br>@ViewBag.ppUrl</div>';

        $.confirm({
            theme: "light",
            title: 'PC端打开地址',
            type: 'red',
            content: show,
            buttons: {
                know: {
                    text: "关闭",
                    btnClass: "btn-red",
                   
                }
              

            }
        });
    }
   
</script>

<header class="o2o_header">O2O商城入口</header>

<div class="o2o_content">
    <div class="box">
        <div class="o2o_index_btn" id="o2o_btn__order" onclick="toRateList();">查看当前各商城费率</div>
    </div>
    <hr class="HR3_668ff2" />
    <div style="text-align: center;">
        <img Id ="QRImg" src="@Model.OrigQRFilePath" class="QRImg" />
    </div>
    
    <div style="text-align: center;">
        <button type="button" onclick="OpenOnPc();" class="mgz btn btn-warning btnOnPC" id="btnOnPC">在PC端打开</button>
       
    </div>
    @if (ViewBag.IsAdmin)
    {
        <div id="AdminArea" style="text-align:center;width:100%">
            <a href="@ViewBag.ReChargePage">出库商充值</a>

        </div>
    }
</div>

